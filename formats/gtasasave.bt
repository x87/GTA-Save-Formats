    float       gamespeed;
    float       unknown2;
    float       _ticktime;
    DWORD       nFramesProcessed;
    WORD        unknown3, unknown4;
    short       weatherID;
    WORD        __gap3;
    DWORD       unknown5, unknown6, unknown7;
    int         vehicleCamView;
    int         onFootCamView;
    int         currentInterior;
    byte        unknown8;
    byte        __gap4[3];
    DWORD       _originalInteriorColor<format=hex>;

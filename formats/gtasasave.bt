// Block 25: ENEX
struct tBlock25_ENEX
{
    tblockHeader header;
    int         nEntries;
    WORD        data[nEntries];
    local int EnexFlag, i;
    for(i, EnexFlag = 0; i < 400; i++)
    {  
        struct tENEX
        {
            INT16   value1;
            if (value1 == -1) 
            {
                EnexFlag = 1;
                break;
            };
            INT16   value2;
            INT16   value3;
        };
        tENEX    data;
        if (EnexFlag) break;
    }
    if (!EnexFlag) WORD unknown; //need or not?
} block25;


